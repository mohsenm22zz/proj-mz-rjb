<Window x:Class="wpfUI.SimulationSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Configure Analysis" Height="450" Width="600"
        Background="#F0F0F0" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TabControl Grid.Row="0">
            <!-- Transient Analysis Tab -->
            <TabItem Header="Transient">
                <Grid Margin="10">
                    <StackPanel>
                        <TextBlock Text="Perform a non-linear, time-domain simulation." Margin="0,0,0,20"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Stop time:" VerticalAlignment="Center" Margin="0,0,10,10"/>
                            <TextBox Grid.Row="0" Grid.Column="1" Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Time to start saving data:" VerticalAlignment="Center" Margin="0,0,10,10"/>
                            <TextBox Grid.Row="1" Grid.Column="1" Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Maximum Timestep:" VerticalAlignment="Center" Margin="0,0,10,10"/>
                            <TextBox Grid.Row="2" Grid.Column="1" Margin="0,0,0,10"/>
                        </Grid>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- AC Sweep Tab -->
            <TabItem Header="AC Sweep">
                <Grid Margin="10">
                    <StackPanel>
                        <TextBlock Text="Perform a small-signal AC analysis." Margin="0,0,0,20"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Type of sweep:" VerticalAlignment="Center" Margin="0,0,10,10"/>
                            <ComboBox Grid.Row="0" Grid.Column="1" Margin="0,0,0,10">
                                <ComboBoxItem>Linear</ComboBoxItem>
                                <ComboBoxItem>Decade</ComboBoxItem>
                                <ComboBoxItem>Octave</ComboBoxItem>
                            </ComboBox>
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Start Frequency:" VerticalAlignment="Center" Margin="0,0,10,10"/>
                            <TextBox Grid.Row="1" Grid.Column="1" Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Stop Frequency:" VerticalAlignment="Center" Margin="0,0,10,10"/>
                            <TextBox Grid.Row="2" Grid.Column="1" Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Number of points:" VerticalAlignment="Center" Margin="0,0,10,10"/>
                            <TextBox Grid.Row="3" Grid.Column="1" Margin="0,0,0,10"/>
                        </Grid>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Phase Sweep Tab -->
            <TabItem Header="Phase Sweep">
                 <Grid Margin="10">
                    <StackPanel>
                        <TextBlock Text="Perform an analysis sweeping the phase of an AC source." Margin="0,0,0,20"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                             <TextBlock Grid.Row="0" Grid.Column="0" Text="Base Frequency:" VerticalAlignment="Center" Margin="0,0,10,10"/>
                            <TextBox Grid.Row="0" Grid.Column="1" Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Start Phase (rad):" VerticalAlignment="Center" Margin="0,0,10,10"/>
                            <TextBox Grid.Row="1" Grid.Column="1" Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Stop Phase (rad):" VerticalAlignment="Center" Margin="0,0,10,10"/>
                            <TextBox Grid.Row="2" Grid.Column="1" Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Number of points:" VerticalAlignment="Center" Margin="0,0,10,10"/>
                            <TextBox Grid.Row="3" Grid.Column="1" Margin="0,0,0,10"/>
                        </Grid>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="OK" Width="75" Margin="0,0,10,0" IsDefault="True"/>
            <Button Content="Cancel" Width="75" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
