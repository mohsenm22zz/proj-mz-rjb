<Window x:Class="wpfUI.DCResultsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DC Operating Point Results" Height="300" Width="400"
        Background="#F0F0F0" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ListBox x:Name="ResultsListBox" Grid.Row="0" Margin="0,0,0,10"/>

        <Button Grid.Row="1" Content="OK" Width="75" HorizontalAlignment="Right" IsDefault="True" Click="OkButton_Click"/>
    </Grid>
</Window>