
<Window x:Class="wpfUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfUI"
        mc:Ignorable="d"
        Title="Circuit Simulator" Height="720" Width="1280"
        Background="#2D2D30">
    <Window.Resources>
        <Style TargetType="MenuItem">
            <Setter Property="Foreground" Value="#CCCCCC"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0" Background="#3D3D40" Foreground="White">
            <MenuItem Header="_File">
                <MenuItem Header="_New Project"/>
                <MenuItem Header="_Open Project"/>
                <MenuItem Header="_Save Project"/>
                <Separator />
                <MenuItem Header="Save as Subcircuit..."/>
                <Separator />
                <MenuItem Header="_Exit"/>
            </MenuItem>
            <MenuItem Header="_Place">
                <MenuItem Header="_Component..." Click="PlaceComponent_Click"/>
                <MenuItem Header="_Node" Click="PlaceNode_Click"/>
                <MenuItem x:Name="WireMenuItem" Header="_Wire" IsCheckable="True" Click="PlaceWire_Click"/>
                <MenuItem x:Name="ProbeMenuItem" Header="_Probe" IsCheckable="True" Click="PlaceProbe_Click"/>
                <MenuItem Header="_Net Label"/>
            </MenuItem>
            <MenuItem Header="_Simulate">
                <MenuItem Header="Edit Simulation Cmd..." Click="EditSimulationCmd_Click"/>
                <MenuItem Header="Run" Click="RunAnalysis_Click"/>
            </MenuItem>
             <MenuItem Header="_Library">
                <MenuItem Header="Open Subcircuit Library..."/>
            </MenuItem>
        </Menu>

        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Toolbox -->
            <Border Grid.Column="0" Background="#3D3D40" BorderBrush="#555555" BorderThickness="0,0,1,0">
                <StackPanel Margin="10">
                    <TextBlock Text="Components" Foreground="White" FontSize="16" Margin="0,0,0,10"/>
                    <Button Content="Resistor" Margin="0,0,0,5" Click="AddComponent_Click" Tag="R"/>
                    <Button Content="Capacitor" Margin="0,0,0,5" Click="AddComponent_Click" Tag="C"/>
                    <Button Content="Inductor" Margin="0,0,0,5" Click="AddComponent_Click" Tag="L"/>
                    <Button Content="Diode" Margin="0,0,0,5" Click="AddComponent_Click" Tag="D"/>
                    <Button Content="Voltage Source (DC)" Margin="0,0,0,5" Click="AddComponent_Click" Tag="V"/>
                    <Button Content="Voltage Source (AC)" Margin="0,0,0,5" Click="AddComponent_Click" Tag="ACV"/>
                    <Button Content="Current Source" Margin="0,0,0,5" Click="AddComponent_Click" Tag="I"/>
                </StackPanel>
            </Border>

            <!-- Circuit Drawing Area -->
            <Canvas x:Name="SchematicCanvas" Grid.Column="1" Background="#252526" ClipToBounds="True">
                <!-- Components will be added here dynamically -->
            </Canvas>
        </Grid>
    </Grid>
</Window>
