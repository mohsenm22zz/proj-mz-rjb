<Window x:Class="wpfUI.ComponentValueWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Set Component Value" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="15">
        <StackPanel>
            <!-- Value Panel -->
            <StackPanel x:Name="GenericPanel">
                <TextBlock Text="Value:"/>
                <TextBox x:Name="ValueTextBox" MinWidth="200" Margin="0,5,0,15"/>
            </StackPanel>

            <!-- AC Voltage Source Panel -->
            <StackPanel x:Name="AcVoltagePanel" Visibility="Collapsed">
                <TextBlock Text="AC Magnitude:"/>
                <TextBox x:Name="AcMagnitudeTextBox" MinWidth="200" Margin="0,5,0,10"/>
                <TextBlock Text="AC Phase (degrees):"/>
                <TextBox x:Name="AcPhaseTextBox" MinWidth="200" Margin="0,5,0,15"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="OK" Width="75" IsDefault="True" Click="OkButton_Click" Margin="0,0,10,0"/>
                <Button Content="Cancel" Width="75" IsCancel="True"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
